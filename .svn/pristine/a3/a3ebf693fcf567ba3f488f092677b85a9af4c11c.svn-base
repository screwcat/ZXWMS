<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<link href="../../css/app.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<script src="../../js/exportxls.js?v=2"></script>
<script type="text/javascript" charset="utf-8"
	src="../../js/media/js/ZeroClipboard.js"></script>
<title>理财管理>赎回修订列表</title>
</head>
<!--style="overflow-y:hidden;"主要实现边框右边无滚动条  -->
<body style="overflow-y: hidden;">
	<div class="l-panel-search clearfix centertoolbar-w">
		<div id="searchbar" class="l-searchbar clearfix">
			<!--查询条件-->
			<div class="l-panel-search-cond clearfix">
				<div class="float-l">
					<div class="l-panel-search-title">客户姓名：</div>
					<div class="l-panel-search-item">
						<input type="text" id="cus_name" />
					</div>
				</div>
				<div class="float-l">
					<div class="l-panel-search-title">有效证件：</div>
					<div class="l-panel-search-item">
						<input type="text" id="id_card" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="centertoolbar" class="minwidth400"></div>
	<div id="grid"></div>
	<!-- 工具条初始化 -->
	<script type="text/javascript">
        var grid;
		var toolbar;
		var params;
		var dialog;
		var columns;
        $(function() {
        	var toolbarItemData = [];
        	initGrid();  
            toolbarItemData.push({
                text: '修改',
                click: update,
                icon: 'modify'
            });
            toolbarItemData.push({
                line: true
            });
            toolbarItemData.push({
                text: '取消赎回',
                click: cancelRedeem,
                icon: 'delete'
            });
            toolbarItemData.push({
                line: true
            });
            toolbarItemData.push({
                text: '查询',
                click:search,
                icon: 'search'
            });
            toolbarItemData.push({
                line: true
            });
            toolbarItemData.push({
                text: '清空',
                click:clear,
                icon: 'empty'
            });
            toolbarItemData.push({
                line: true
            });
            toolbarItemData.push({
                text: '导出Excel',
                icon: 'export',
                id:'ToolTables_XLS_2'
            });
            toolbarItemData.push({
                line: true
            });
          $("#centertoolbar").ligerToolBar({
            items: toolbarItemData
        	});
            search();
            registerCsv();
        });
        /**
         * 在菜单上注册导出事件，并定义获取的导出的excel内容 
         */
        function registerCsv(){
        	var moviePath = "../../js/media/swf/copy_csv_xls_pdf.swf";
        	var fileName = '审核退回单据信息.xls';
        	var titleJson = '';
        	var dataJson = '';
        	var obj = $("div[toolbarid='ToolTables_XLS_2']")[0];//获取菜单对象                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
        	var getDataFun = function(){
        		var text = {};
        		initParams();
        		text.title={'bill_code':'单据编号','cus_name':'客户姓名','id_card':'有效证件','redeem_apply_total_amount':'赎回金额','redeem_date':'申请时间','data_status_name':'单据状态'};//定义需要导出的列名以及列名与数据的对应关系
				var sortname = 'redeem_date';
        		var json = globalUtil.syncPostJson("/inve/wmsinvecheckreturnlistwithout.do?sortname="+sortname+"&sortorder=desc&redeem_type=0",params);//同步获取需要导出的数据内容
        		text.data = json.Rows;
        		return text;
        	};
        	registerXlsFlashBtn(moviePath,fileName,titleJson,dataJson,obj,getDataFun);
        }                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                      
        //清空所填写内容
        function clear(){
        	$("#cus_name").val("");
        	$("#id_card").val("");
        }
        //表格初始化
        function initGrid() {
        	columns = [{
                display: '单据编号',
                name: 'bill_code',
                width: 200,
                minWidth: 200,
                //添加超链接的东西
                render: function (rowdata, rowindex, value) { 
        			return '<a href="javascript:inveInfo('+rowdata.wms_inve_redeem_id+','+rowdata.wms_inve_transa_id+');" style="color:#056AFF;text-decoration: none;">'+value+'</a>';
        		}
            },{
           		 display: '客户姓名',
            	 name: 'cus_name',
            	 width: 120,
            	 minWidth: 120,
        	},{
           	 	 display: '有效证件',
            	 name: 'id_card',
             	 width: 200,
             	 minWidth: 200,
       		},{
           		 display: '赎回金额(元)',
            	 name: 'redeem_apply_total_amount',
            	 width: 120,
            	 minWidth: 120,
        	},{
           		 display: '申请时间',
            	 name: 'redeem_date_str',
            	 width: 120,
            	 minWidth: 120,
        	},{
           	 	display: '单据状态',
             	name: 'data_status_name',
             	width: 120,
             	minWidth: 120,
       		},{
           	 	 display: '流程历程',
             	 width: 200,
            	 minWidth: 200,
            	 render: function (rowdata, rowindex, value) { 
         			return '<a href="javascript:InveWorkFlowProcess('+rowdata.wms_inve_redeem_id+');" style="color:#056AFF;text-decoration: none;">'+"查看"+'</a>';
         		}
        	}];
            grid = $("#grid").ligerGrid({
        		columns: columns,
        		url: global_param.context_name + '/inve/getcheckreturnlist.do?redeem_type=0',
        		sortName: 'redeem_date', // 排序列名
				sortOrder: 'desc', // 排序方式
        		rownumbers: true,
        		allowUnSelectRow: true,
        		usePager: true,
        		width: '100%',
        		height: '95%',
        		heightDiff: -4,
        		parms: {
        			_filterParms: -1
        		}
            });
        }
        //查看赎回单据详细信息
        function inveInfo(wms_inve_redeem_id,wms_inve_transa_id){
        	//var url = globalUtil.getHtml("inve/redeemInfo.html?wms_inve_redeem_id="+wms_inve_redeem_id+"&cktype=ck");
            //globalUtil.openTab(10001, "赎回客户信息明细", url, false);
            var url = globalUtil.getHtml("redeemInfoNewVersion.html?wms_inve_redeem_id="+wms_inve_redeem_id+"&wms_inve_transa_id="+wms_inve_transa_id+"&cktype=ck");
            dialog = $.ligerDialog.open({
		        url: url,
		        title: '赎回客户信息明细',
		        width: 1000,
		        height: globalUtil.setDialogHeight(800),
		        onHiddenOrClose: function(){
		    	},
		        isResize: false
	    	}); 
        }
        //流程历程
        function InveWorkFlowProcess(wms_inve_redeem_id){
        	var url = globalUtil.getHtml("approvalProcess.html?wms_inve_redeem_id="+wms_inve_redeem_id);
       		dialog=$.ligerDialog.open({
       			url:url,
       			title: '查看',
		        width: 1000,
		        height: globalUtil.setDialogHeight(500),
		        onHiddenOrClose: function(){
		    	},
		        isResize: false
       		});
        }
       	//赎回修改
        function update(){
        	//判断如果没有选择任何审批人，不允许跳出审批页面。
        	var row=grid.getSelectedRow();
        	if(row==null ){
        		globalUtil.warnMsg(globalErrorMsg['300103']);//请选择一行记录进行审批
                return;
        	}else{
        	var url = globalUtil.getHtml("checkReturnNewVersion.html?wms_inve_redeem_id="+row.wms_inve_redeem_id+"&taskId="+row.taskId+"&status="+row.data_status+"&cxdeptid="+row.salesman_dept_id+"&bill_source="+row.bill_source+"&old_date_of_payment="+row.old_date_of_payment+"&wms_inve_transa_id="+row.wms_inve_transa_id);
           		dialog=$.ligerDialog.open({
           			url:url,
           			title: '赎回修订',
    		        width: 1000,
    		        height: globalUtil.setDialogHeight(800),
    		        onHiddenOrClose: function(){
    		    	},
    		        isResize: false
           		}); 	
        	}
        }
        //取消赎回
        function cancelRedeem(){
        	//判断如果没有选择任何审批人，不允许跳出取消赎回页面。
        	var row=grid.getSelectedRow();
        	if(row==null ){
        		globalUtil.warnMsg(globalErrorMsg['800507']);//请选择一行记录取消赎回申请
                return;
        	}
        	globalUtil.confirmMsg(globalErrorMsg['800508'],
        			    function(yes) { //确认删除
        			    	if(yes){
        			    		var paramJson = {};
        						paramJson.taskId = row.taskId;
        						paramJson.businessId = row.wms_inve_redeem_id;
        						paramJson.wms_inve_redeem_id = row.wms_inve_redeem_id;
        						$.post(globalUtil.getTimestampUrl("/inve/cancelWmsInveRedeem.do"), paramJson,
        						        function(data) {
        						        	if (data === 'success') {
        						            	 globalUtil.successMsg(globalErrorMsg['100002'],
        						            	 function(){            		 		
        						                		refreshAndClosePage();
        						            	 });//保存成功		            	 
        						            }else {
        						                globalUtil.errorMsg(globalErrorMsg['100012']); //保存失败 
        						            }
        						});	
        			    	}
        			});
        }
        function initParams() {
        	params = globalUtil.getFormParam("searchbar");
        }
        var search= function() {
            initParams();
            global_ligerui_extend.search(grid, params);
        }
        function registParentFun(){
        	parent.window.registFun = [];
        	parent.window.registFun[0] = search;
        }
        function refreshAndClosePage(){
        	initParams();
            global_ligerui_extend.search(grid, params);
        }
        </script>
</body>
</html>
