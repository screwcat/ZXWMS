<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>公证到期提醒</title>
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<style type="text/css">
.float-l {
    height: 40px;
}
input {
    width: 150px;
}
select {
    width: 152px;
}
.readonly {
    background-color: rgb(235, 235, 228);
}
</style>
</head>
<body>
	<div class="pop-center overflow-au" style="margin: 5px; margin-top: 5px;">
	    <div class="center-content clearboth" style="" id="data">
	        <div class="center-title" style="margin-top: 0px;">贷款信息</div>
		    <div class="center-content2 clearboth" style="height: 350px;">
		        <div class="l-panel-search-cond clearfix" id="info" style="padding-top: 10px; width: 850px; margin-left: 28px;">
			        <div class="float-l" style="margin-left: 39px">
		                <div class="l-panel-search-title">申请日期：</div>
		                <div class="l-panel-search-item">
		                      <input type="text" id="apply_date" class="Wdate" 
		                    	onclick="WdatePicker({dateFmt:'yyyy-MM-dd',isShowClear:true})"
								style="vertical-align: top;" maxlength="50" />
		                </div>
		            </div>
		            <div class="float-l" style="margin-left: 26px">
		                <div class="l-panel-search-title">客户姓名：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="customer_name" maxlength="20" />
		                </div>
		            </div>
		            <div class="float-l" style="margin-left: 16px">
		                <div class="l-panel-search-title">地区：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="city" maxlength="11" />
		                </div>
		            </div>
		            <div class="float-l clearboth" style="margin-left: 38px">
		                <div class="l-panel-search-title">房产地址：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="house_address" maxlength="50"   style="width: 423px;" />
		                </div>
		            </div>
		            <div class="float-l" style="margin-left: -8px;">
		                <div class="l-panel-search-title">小区名称：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="community_name" maxlength="20" />
		                </div>
		            </div>
		            <div class="float-l clearboth" style="margin-left: 38px">
		                <div class="l-panel-search-title">建筑面积：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="house_building_area" maxlength="11" style="width: 140px;" />㎡
		                </div>
		            </div>
		            <div class="float-l" style="margin-left: 35px">
		                <div class="l-panel-search-title">业务员：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="salesman_name" maxlength="50" />
		                </div>
		            </div>
		            <div class="float-l" style="margin-left: 20px">
		                <div class="l-panel-search-title">工号：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="salesman_shortcode" maxlength="20" />
		                </div>
		            </div>
		            <div class="float-l clearboth" style="margin-left: 38px">
		                <div class="l-panel-search-title">贷款金额：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="credit_limit" maxlength="20" style="width: 127px;" />万元
		                </div>
		            </div>
		            <div class="float-l" style="margin-left: 23px">
		                <div class="l-panel-search-title">初评金额：</div>
		                <div class="l-panel-search-item">
		                  	<input type="text" id="vehicle_evaluation_price" maxlength="20" style="width: 127px;" />万元
		                </div>
		            </div>
		            <div class="float-l" style="margin-left: -5px">
		                <div class="l-panel-search-title">终审金额：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="appro_limit" maxlength="20"  style="width: 127px;" />万元
		                </div>
		            </div>
		            <div class="float-l" style="margin-left: 38px;">
		                <div class="l-panel-search-title">验房单价：</div>
		                <div class="l-panel-search-item">
		                   <input type="text" id="house_unit_price" maxlength="20"  style="width: 140px;" />元
		                </div>
		            </div>
		            <div class="float-l" style="margin-left: 22px;">
		                <div class="l-panel-search-title">批款单价：</div>
		                <div class="l-panel-search-item">
		                    <input type="text" id="appro_unit_limit" maxlength="20" style="width: 140px;" />元
		                </div>
		            </div>
		            <div class="float-l clearboth" style="margin-left: 62px; width: 100%;">
		                <div class="l-panel-search-title">备注：</div>
		                <div class="l-panel-search-item">
		                    <textarea  id="info_remark" maxlength="250"style="width: 660px; height: 80px;"  ></textarea>
		                </div>
		            </div>
			    </div>
		    </div>
		</div>
	</div>
    <!-- 提交功能按钮区 -->
    <div class="pop-footer5 clearboth" style="bottom: 1px; height: 35px" id="tb_btn">
        <!-- 提交 -->
        <input id="save" class="btn-saveT"
            onmouseover="this.className='btn-saveT-over'"
            onmouseout="this.className='btn-saveT'"
            onmousedown="this.className='btn-saveT-down'" type="button"
            style="margin-right: 7px;" />
        <input id="cancel"
            class="btn-cancel" onmouseover="this.className='btn-cancel-over'"
            onmouseout="this.className='btn-cancel'"
            onmousedown="this.className='btn-cancel-down'" type="button" />
    </div>
<script type="text/javascript">

var wms_cre_credit_historical_info_id = $.query.get('wms_cre_credit_historical_info_id');
var reqMap={};
$(function() {
		reqMap.wms_cre_credit_historical_info_id=wms_cre_credit_historical_info_id
		//初始化数据
		$.ajax({
	        url: global_param.context_name + '/loanreview/wmscrecredithistoricalinfoinfobypk.do',
	        type: 'GET',
	        data: reqMap,
	        async: false,
	        success: function(data) {
	        	globalUtil.setFormVal("info", data);
	        }
	    });
	});

	//保存
	$('#save').click(function() {
		globalUtil.getFormParam('info', reqMap);
		$.ajax({
	        url: global_param.context_name + "/loanreview/wmscrecredithistoricalinfoupdate.do",
	        type: 'POST',
	        data: reqMap,
	        async: false,
	        success: function(data) {
	        	if(data == "success") {
	        		globalUtil.successMsg(globalErrorMsg['100002'], function() {  
	        			window.parent.dialog.hide();
		            	refreshAndClosePage();
	                });
	        	} else {
	        		globalUtil.warnMsg(globalErrorMsg['100012']);
	        	}
	        }
	    });
	});
	//取消
	$('#cancel').click(function() {
		closePage();
	});

function closePage() {
    try {
        window.parent.dialog.hide();
    } catch(e) {
        globalUtil.closeCurrentTab();
    }
 }

//关闭本页并刷新查询页面
function refreshAndClosePage() { 
	try{
    window.parent.research();
	}catch(e){
		window.parent.search(); 
	}
    closePage();    
}
</script>
</body>
</html>
