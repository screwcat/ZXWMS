			initCategoryList();
			initSearchDataType();
		});
		
		function initToolbar(){
			var toolbarItems = [{
				text: '锁定处理',
				click: lockAndHandle,
				icon: 'modify'
			},{
				text: '过号重排',
				click: reStartOrder,
