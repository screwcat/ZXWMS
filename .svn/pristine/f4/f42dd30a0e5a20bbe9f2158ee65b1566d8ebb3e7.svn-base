<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>债权选择</title>
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<link href="../../css/app.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<script src="../../js/exportxls.js?v=2"></script>
<script type="text/javascript" charset="utf-8"
	src="../../js/media/js/ZeroClipboard.js"></script>
</head>
<body style="overflow-y: hidden;">
	<div class="center-title">
			<span id="category_name">债权选择</span>
	</div>
	<div class="l-panel-search clearfix centertoolbar-w">
		<div id="searchbar" class="l-searchbar clearfix">
			<!--查询条件-->
			<div class="l-panel-search-cond clearfix">
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px;" >可转让额度:</div>
					<div class="l-panel-search-item">
						<input type="radio" name="" class="radio5" value="1"checked="checked"/><span>10万以下&nbsp;&nbsp;&nbsp;&nbsp;</span>
						<input type="radio" name="" class="radio5" value="2" onclick=""/><span>10万-20万&nbsp;&nbsp;&nbsp;&nbsp;</span>
						<input type="radio" name="" class="radio5" value="2" onclick=""/><span>20万-30万&nbsp;&nbsp;&nbsp;&nbsp;</span>
						<input type="radio" name="" class="radio5" value="2" onclick=""/><span>30万以上&nbsp;&nbsp;&nbsp;&nbsp;</span>
					</div>
					
				</div>
				<div class="float-l clearboth ">
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px;">终止还款时间:</div>
					<div class="l-panel-search-item">
						<input id="lssue_date_begin" class="Wdate" type="text"
							style="width: 90px; vertical-align: top;" /> 到 <input
							id="lssue_date_end" class="Wdate" type="text"
							style="width: 90px; vertical-align: top;" />
					</div>
				</div>
					<div class="l-panel-search-title" style="margin-left: 16px;">产品大类:</div>
					<div class="pop-form-title">
						<select>
							<option selected="selected">全部</option>
							<option>房屋贷款</option>
							<option>车辆贷款</option>
						</select>
					</div>
					<!-- 如果需要将产品大类查询出来就用这个
						<div class="float-l">
							<div class="l-panel-search-title" style="width: 63px;">产品大类:</div>
							<div class="l-panel-search-item">
								<input type="text" id="category_name" style="width: 223px;"/>
							</div>
						</div>
					 -->
				</div>
				</div>
			</div>
		</div>
		<div class="line clearboth" id="info_l3"></div>
	<div id="centertoolbar" class="minwidth400"></div>
	<div id="grid"></div>
	<div class="pop-footer5 clearboth" style="bottom: 1px;">
		<input id="zcbtn" class="btn-confirm"
			onmouseover="this.className='btn-confirm-over'"
			onmouseout="this.className='btn-confirm'"
			onmousedown="this.className='btn-confirm-down'" type="button"
			style="margin-right: 7px;" onclick="save()"/> <input
			id="cancelBtnId" class="btn-close"
			onmouseover="this.className='btn-close-over'"
			onmouseout="this.className='btn-close'"
			onmousedown="this.className='btn-close-down'" type="button"
			onclick="closeDialog();"/>
	</div>
	<!-- 工具条初始化 -->
	<script type="text/javascript">
        var grid;
		var toolbar;
		var params;
		var dialog;
		var columns;
        $(function() {
        	initGrid();
        	var toolbarItemData = [];
        	 toolbarItemData.push({
                 text: '查询',
                 //click:,
                 icon: 'search'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '清空',
                 //click:,
                 icon: 'empty'
             });
             toolbarItemData.push({
                 line: true
             });
             $("#centertoolbar").ligerToolBar({
                  items: toolbarItemData
        	 });
             //search();
        });
    	 //实现数据导出功能
        //清空所填写内容
        function clear(){
        	$("#personnel_Code").val("");
        	global_ligerui_extend.setComboxVal("compay_id","-2");
		    global_ligerui_extend.setComboxVal("dept_id","-2");
		    global_ligerui_extend.setComboxVal("team_id","-2");
            search();	
        }
        //表格初始化
        function initGrid() {
        	columns = [{
                display: '产品大类',
                name: '',
                width: 200,
                minWidth: 200,
            	isSort:false
            },{
                display: '借款合同号',
                name: '',
                width: 200,
                minWidth: 200,
            	isSort:false
            },{
            	display:'借款人姓名',
            	name:'',
            	width:200,
            	minWidth:200,
            	isSort:false
            },{
            	display:'借款人身份证号',
            	name:'',
            	width:200,
            	minWidth:200,
            	isSort:false
            },{
            	display:'可用转让额度（元）',
            	name:'',
            	width:200,
            	minWidth:200,
            	isSort:false
            },{
            	display:'起始还款日期',
            	name:'',
            	width:200,
            	minWidth:200,
            	isSort:false
            },{
            	display:'终止还款日期',
            	name:'',
            	width:200,
            	minWidth:200,
            	isSort:true
            }];
            grid = $("#grid").ligerGrid({
        		columns: columns,
        		//url: global_param.context_name + '',
        		sortName: '', // 排序列名
				sortOrder: '', // 排序方式
        		rownumbers: true,
        		allowUnSelectRow: true,
        		usePager: true,
        		enabledSort: true, 
        		width: '100%',
        		height: '100%',
        		heightDiff: -4,
        		parms: {
        			_filterParms: -1
        		}
            });
        }  
        </script>
</body>
</html>