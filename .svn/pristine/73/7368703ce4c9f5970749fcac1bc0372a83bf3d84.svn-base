<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-

transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<link href="../../css/app.css" rel="stylesheet" type="text/css" />
<link href="../../css/ligerui-main.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<title>审批</title>
<style type="text/css">
.td_title {
	background: none repeat scroll 0 0 #EAF0FB;
}

.tb_input TD {
	background: none repeat scroll 0 0 #FFFFFF;
	padding: 3px 1px 1px 4px;
}

table td {
	border-color: #BFBFBF;
}
</style>
</head>
<body>
	<!-- 页面加载的时候，审批流程为显示 -->
	<hr />
	<div class="float-l clearboth" style="height: 10px;"></div>
	<div class="center-content clearboth" style="min-width: 300px;">
		<div class="center-title">审批流程</div>
		<div class="center-txt" style="margin-bottom: 10px;">
			<div id="grid"></div>
		</div>
	</div>
	<div class="center-content clearboth"
		style="min-width: 600px; margin-top: 0px">
		<div class="center-title">审批</div>
		<hr />
		<div id="grid_idea">
			<table align="center" border="1" cellpadding="0" cellspacing="2"
				style="border-color: #BFBFBF" width="100%"
				style="font-size: 10.5pt;">
				<tr>
					<td class="td_title" width="14%" rowspan="2" align="center">
						<font color="red">*</font>审批意见
					</td>
					<td><input type="radio" id="transition_pass" name="pass"
						class="radio5" value="true" checked="checked" />同意 <input
						type="radio" id="transition_reject" name="pass" class="radio5"
						value="false" />不同意</td>
				</tr>
				<tr>
					<td><textarea id="advice" name="advice" rows="100"
							style="width: 660px; height: 130px; resize: none;"></textarea></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="pop-footer5 clearboth" style="bottom: 1px;">
		<input id="tjbtn" class="btn-saveT"
			onmouseover="this.className='btn-saveT-over'"
			onmouseout="this.className='btn-saveT'"
			onmousedown="this.className='btn-saveT-down'" type="button"
			style="margin-right: 7px;" onclick="save()" /> <input
			id="cancelBtnId" class="btn-cancel"
			onmouseover="this.className='btn-cancel-over'"
			onmouseout="this.className='btn-cancel'"
			onmousedown="this.className='btn-cancel-down'" type="button"
			onclick="closeDialog();" />
	</div>
	<!-- 工具条初始化 -->
	<script type="text/javascript">
		var grid;
		var dialog;
		var columns;		
		var wms_inve_redeem_id=$.query.get('wms_inve_redeem_id');
		//是否是特批
		tepi=$.query.get('tepi');
		$(function() {
			initGrid();
			search();				
		});
		function initGrid() {
			columns = [ {
				display : '节点名称',
				name : 'taskName',
				width : 150,
				minWidth : 150,
			}, {
				display : '审批人',
				name : 'approvers',
				width : 100,
				minWidth : 100
			}, {
				display : '审批人部门',
				name : 'personnel_deptName',
				width : 100,
				minWidth : 100
			}, {
				display : '职务',
				name : 'personnel_postName',
				width : 100,
				minWidth : 100
			},{
				display : '审批结果',
				name : 'approveResult',
				width : 70,
				minWidth : 70
			}, {
				display : '审批意见',
				name : 'approveAdvice',
				width : 100,
				minWidth :100
			}, {
				display : '审批时间',
				name : 'approveTime',
				width : 130,
				minWidth : 130
			} ];

			grid = $("#grid").ligerGrid({
				columns : columns,
				url : global_param.context_name + '/inve/approvalProcessView.do?wms_inve_redeem_id='+wms_inve_redeem_id,
				rownumbers : true,
				allowUnSelectRow : true,
				usePager : false,
				width : '100%',
				height : 120,
				heightDiff : -4,
				parms : {
					_filterParms : -1
				}
			});
		}
		function save(){	
			$("input[name='pass']").each(function() {
				if ($(this).is(':checked')) {
					if(tepi == 1){
						if( $(this).val()!="true"){
							if($.trim(document.getElementById("advice").value) == ""||change(document.getElementById("advice").value)){							
								globalUtil.errorMsg("请填写审批意见！！"); //提示x
							}else{
								//隐藏提交按钮
								$("#tjbtn").css("display","none");
								var paramJson = globalUtil.getFormParam("grid_idea");
								paramJson.wms_inve_redeem_id=wms_inve_redeem_id;
								getOtherVal(paramJson);	
								window.parent.saveTePi(paramJson.pass,paramJson.advice);
							}	
						}else{
							//隐藏提交按钮
							$("#tjbtn").css("display","none");
							var paramJson = globalUtil.getFormParam("grid_idea");
							paramJson.wms_inve_redeem_id=wms_inve_redeem_id;
							getOtherVal(paramJson);								
							window.parent.saveTePi(paramJson.pass,paramJson.advice);
						}
					}else{
						if( $(this).val()!="true"){
							if($.trim(document.getElementById("advice").value=="")||change(document.getElementById("advice").value)){							
								globalUtil.errorMsg("请填写审批意见！！"); //提示x
							}else{
								//隐藏提交按钮
								$("#tjbtn").css("display","none");
								var paramJson = globalUtil.getFormParam("grid_idea");
								paramJson.wms_inve_redeem_id=wms_inve_redeem_id;
								getOtherVal(paramJson);										
								window.parent.save(paramJson.pass,paramJson.advice);
							}	
						}else{
							//隐藏提交按钮
							$("#tjbtn").css("display","none");
							var paramJson = globalUtil.getFormParam("grid_idea");
							paramJson.wms_inve_redeem_id=wms_inve_redeem_id;
							getOtherVal(paramJson);							
							window.parent.save(paramJson.pass,paramJson.advice);
						}
					}
				}
			});
			//提交按钮
			//$("#tjbtn").css("display","");
		}	
		//查询
		function search() {
			global_ligerui_extend.search(grid);
		}
		function close(){
			dialog.close();
			search();
		}
		function closeDialog(){
			window.parent.dialog.hide();
			//window.parent.show();
			
		}
		function getOtherVal(jsonStr) {
			$("input[name='pass']").each(function() {
				if ($(this).is(':checked')) {
					jsonStr.pass = $(this).val();
					return false;//退出each循环
				}
			});				
		}
		//去除空格
		function change(val){
			//val = val.replace(/\D/g,'')
			//console.log(val.split(" "));
			var valle=val.split(" ");
			var k=0;
			for(var i=0 ;i<valle.length;i++){
				if(valle[i]==""){
					k++;
				}
			}
			if(k==valle.length){
				return true;	
			}
			return false;
		 }
	</script>

</body>


</html>
