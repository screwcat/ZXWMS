<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>账户查询</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<link href="../../css/app.css" rel="stylesheet" type="text/css" />
<link href="../../css/ligerui-main.css" rel="stylesheet" type="text/css"/>
<link href="../../css/style.css" rel="stylesheet" type="text/css"/>
<script language="Javascript" src="../../js/jquery-1.8.3.min.js"></script>
<script language="Javascript" src="../../js/ajaxfileupload.js"></script>
<script language="Javascript" src="../../js/jquery.cookie.js"></script>
<script language="Javascript" src="../../js/ligerui.all.js"></script>
<script language="Javascript" src="../../js/date/WdatePicker.js"></script>
<script language="Javascript" src="../../js/jquery.json-2.3.js"></script>
<script language="Javascript" src="../../js/jquery.query-2.1.7.js"></script>
<script language="Javascript" src="../../js/zxjs/error.message.js"></script>
<script language="Javascript" src="../../js/zxjs/global.ligerui.extend.js"></script>
<script language="Javascript" src="../../js/zxjs/global.util.js"></script>
<script language="Javascript" src="../../js/zxjs/menu.js"></script>
<script language="Javascript" src="../../js/zxjs/tab.js"></script>
<script language="Javascript" src="../../js/zxjs/form.js"></script>
<script language="Javascript" src="../../js/zxjs/global.vali.js"></script>
<script type="text/javascript">
//获取用户输入的信息
function checkAndGet(){
	var customer_name=$("#customer_name").val();
	var id_card=$("#id_card").val();
	var mobile_telephone1=$("#mobile_telephone1").val();
	if(customer_name==""||customer_name==null){
		globalUtil.alertMsg("请输入姓名！");
		return;
	}
	if(!globalUtil.isIdCard(id_card)){
		globalUtil.alertMsg("您输入的身份证号码有误！");
		return;
	}
	if(!globalUtil.isPhone(mobile_telephone1)){
		globalUtil.alertMsg("您输入的手机号码有误！");
		return;
	}
	window.location.href="billTel.html?customer_name="+customer_name+"&id_card="+id_card+"&mobile_telephone1="+mobile_telephone1;
}
//客户选择 方式
function chengeChecked(val){
	if(val=="lckh"){
		$("#lckh").attr("checked", false);
		alert("功能建设中.....");
		return;
	}
	if(val=="jdkh"&&$("#jdkh").is(':checked')){
		$("#lckh").attr("checked", false);
	}
	if(val=="lckh"&&$("#lckh").is(':checked')){
		$("#jdkh").attr("checked", false);
	}
}
</script>
</head>
<body style="background-color:#9fa2a5;">
<div class="scr-login">
  <div class="scr-login_user">
    <ul>
      <li class="scr-login_user_ul_li1"><img src="../../images/login_1.png" width="49" height="40"/></li>
      <li class="scr-login_user_ul_li2">
        <input name="textfield" id="customer_name" type="text" class="login_text1" placeholder="请输入客户姓名" value="" size="35"/>
      </li>
    </ul>
  </div>
  <div class="scr-login_user">
    <ul>
      <li class="scr-login_user_ul_li1"><img src="../../images/login_2.png" width="49" height="40"/></li>
      <li class="scr-login_user_ul_li2">
        <input name="textfield" id="id_card" type="text" class="login_text1" value="" placeholder="请输入客户身份证号" size="35"/>
      </li>
    </ul>
  </div>
  <div class="scr-login_user">
    <ul>
      <li class="scr-login_user_ul_li1"><img src="../../images/login_3.png" width="49" height="40"/></li>
      <li class="scr-login_user_ul_li2">
        <input name="textfield" id="mobile_telephone1" type="text" class="login_text1" value="" placeholder="请输入客户手机号" size="35"/>
      </li>
    </ul>
  </div>
  <div class="scr-login-sec">
    <input  name="contract" type="checkbox"  class="com-sec" checked="checked" style="zoom:90%;" onclick="chengeChecked('jdkh')" id="jdkh"/>
    <label class="conblue">借款客户</label>
    <input  name="contract" type="checkbox"  class="com-sec"  style="zoom:90%;"  id="lckh" onclick="chengeChecked('lckh')"/>
    <label class="conblue">理财客户</label>
  </div>
  <div class="scr-login_btn"><a href="javascript:checkAndGet()">立即查询</a></div>
</div>
</body>
</html>
