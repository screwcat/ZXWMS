<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-

transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<link href="../../css/app.css" rel="stylesheet" type="text/css" />
<link href="../../css/ligerui-main.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<title>联系人信息</title>
<style type="text/css">
.td_title {
	background: none repeat scroll 0 0 #EAF0FB;
}

.tb_input TD {
	background: none repeat scroll 0 0 #FFFFFF;
	padding: 3px 1px 1px 4px;
}
</style>

<script type="text/javascript">
	
</script>
</head>
<body>
	<!-- 页面加载的时候，审批流程为显示 -->
	<hr />
	<div class="float-l clearboth" style="height: 10px;"></div>
	<div class="center-content clearboth" style="min-width: 300px;">
		<div class="center-title"></div>
		<div class="center-txt" style="margin-bottom: 10px;">
			<div id="grid"></div>
		</div>
	</div>
	<!-- 工具条初始化 -->
	<script type="text/javascript">
		var grid;
		var columns;	
		var wms_cre_credit_head_id;
		$(function() {
			wms_cre_credit_head_id=$.query.get('wms_cre_credit_head_id');
			initGrid();
			search();				
		});
		//初始化表格
		function initGrid() {
			columns = [ {
				display : '姓名',
				name : 'contact_name',
				width : 200,
				minWidth : 200,
			}, {
				display : '关系',
				name : 'contact_relation_description',
				width : 200,
				minWidth : 200,
			}, {
				display : '联系电话',
				name : 'contact_mobile_phone',
				width : 200,
				minWidth : 200
			} ];

			grid = $("#grid").ligerGrid({
				columns : columns,
				url : global_param.context_name + '/cremanage/getContactsInfoList.do?wms_cre_credit_head_id='+wms_cre_credit_head_id,
				rownumbers : true,
				allowUnSelectRow : true,
				usePager : false,
				width : '100%',
				height : 370,
				heightDiff : -4,
				sortName: 'wms_cre_customer_change_line_contact_id', // 排序列名
				sortOrder: 'asc', // 排序方式
				parms : {
					_filterParms : -1
				}
			});
		}
		//查询
		function search() {
			global_ligerui_extend.search(grid);
		}
	</script>
</body>
</html>
