<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<link href="../../css/app.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<script src="../../js/exportxls.js?v=2"></script>
<script type="text/javascript" charset="utf-8"
	src="../../js/media/js/ZeroClipboard.js"></script>
<title>终审管理>房贷终审>房贷他项列表</title>
</head>
<body style="overflow-y: hidden;">
	<div class="l-panel-search clearfix centertoolbar-w">
		<div id="searchbar" class="l-searchbar clearfix">
			<!--查询条件-->
			<div class="l-panel-search-cond clearfix">
				<div class="float-l">
					<div class="l-panel-search-title">单据编号：</div>
					<div class="l-panel-search-item">
						<input type="text" id="bill_code" />
					</div>
					<div class="float-l">
						<div class="l-panel-search-title">申请时间：</div>
						<div class="l-panel-search-item">
							<input id="create_timestamp" class="Wdate" type="text"
								onclick="WdatePicker({dateFmt:'yyyy-MM-dd',isShowClear:true})"
								style="width: 133px; vertical-align: top;" />
						</div>
					</div>
				</div>
				<div class="float-l"></div>
				<div class="float-l">
					<div class="l-panel-search-title">&nbsp;&nbsp;业务员/编号：</div>
					<div class="l-panel-search-item">
						<input type="text" id="salesman_name" />
					</div>
				</div>
				<div class="float-l">
					<div class="l-panel-search-title">身份证号：</div>
					<div class="l-panel-search-item">
						<input type="text" id="id_card" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="centertoolbar" class="minwidth400"></div>
	<div id="grid"></div>
	<!-- 工具条初始化 -->
	<script type="text/javascript">
    var grid;
	var toolbar;
	var params;
	var dialog;
	var columns;
	$(function() {
        	initGrid();
        	var toolbarItemData = [];
        	toolbarItemData.push({
           	 	text:'他项',
           	 	click:add,
           	 	icon:'heitem'
           	 
            });
            toolbarItemData.push({
           	 line:true
            });
             toolbarItemData.push({
                 text: '查询',
                 click:search,
                 icon: 'search'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '清空',
                 click:clear,
                 icon: 'empty'
             });
             toolbarItemData.push({
                 line: true
             });            
             toolbarItemData.push({
                 text: '导出Excel',
                 icon: 'export',
                 id:'ToolTables_XLS_2'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '单据作废',
                 click:deleteInfo,
                 icon: 'delete'
             });
             toolbarItemData.push({
                 line: true
             });
             $("#centertoolbar").ligerToolBar({
                  items: toolbarItemData
        	 });
             search();
             registerCsv();
        });
        function registerCsv(){
        	var moviePath = "../../js/media/swf/copy_csv_xls_pdf.swf";
        	var fileName = '他项列表信息.xls';
        	var titleJson = '';
        	var dataJson = '';
        	var obj = $("div[toolbarid='ToolTables_XLS_2']")[0];//获取菜单对象
        	var getDataFun = function(){
        		var text = {};
        		initParams();
        		//实现导出的时候，规定导出的具体内容
        		text.title={'bill_code':'单据编号','create_timestamp':'申请时间','cre_type_name':'贷款产品','customer_name':'客户姓名','id_card':'身份证号','credit_limit':'贷款金额(万元)','salesman_name_str':'业务员/编号','city':'城市','create_user_name':'录入员','bill_status_name':'单据状态'};//定义需要导出的列名以及列名与数据的对应关系
        		var json = globalUtil.syncGetJson("/loanappro/getOthersWithoutPagingList.do?sortname=bill_code",params);//同步获取需要导出的数据内容
        		text.data = json.Rows;
        		return text;
        	};
        	registerXlsFlashBtn(moviePath,fileName,titleJson,dataJson,obj,getDataFun);
        }
        //清空所填写内容
        function clear(){
           document.getElementById('bill_code').value="";
		   document.getElementById('create_timestamp').value="";
		   document.getElementById('salesman_name').value="";
		   document.getElementById('id_card').value="";
        }
        //表格初始化
        function initGrid() {
        	columns = [{
                display: '单据编号',
                name: 'bill_code',
                width: 130,
                minWidth: 130,
                //添加超链接的东西
                render: function (rowdata, rowindex, value) { 
        			return '<a href="javascript:creditInfo('+rowdata.wms_cre_credit_head_id+');" style="color:#056AFF;text-decoration: none;">'+value+'</a>';
        		},

            },{
                display: '申请时间',
                name: 'create_timestamp',
                width: 150,
                minWidth: 150
            },{
            	display:'贷款产品',
            	name:'cre_type_name',
            	width:110,
            	minWidth:110
            },{
            	display:'客户姓名',
            	name:'customer_name',
            	width:120,
            	minWidth:120
            	
            },{
            	display:'身份证号',
            	name:'id_card',
            	width:180,
            	minWidth:180
            },{
            	display:'贷款金额(万元)',
            	name:'credit_limit',
            	width:120,
            	minWidth:120
            },{
                display: '业务员/编号',
                name: 'salesman_name_str',
                width: 100,
                minWidth: 100	
            },{
            	display:'城市',
            	name:'city',
            	width:100,
            	minWidth:100
            },{
                display: '录入员',
                name: 'create_user_name',
                width: 100,
                minWidth:100
            },{
                display: '单据状态',
                name: 'bill_status_name',
                width: 100,
                minWidth: 100
            },{
        	   display: '流程历程',
               width: 100,
               minWidth: 100,
               //添加超链接
               render: function (rowdata, rowindex, value) { 
       			return '<a href="javascript:approvalProcess('+rowdata.wms_cre_credit_head_id+');" style="color:#056AFF;text-decoration: none;">'+"查看"+'</a>';
               }
               }];
        	
            grid = $("#grid").ligerGrid({
        		columns: columns,
        		url: global_param.context_name + '/loanappro/getOthersWithPagingList.do',
        		sortName: 'bill_code', // 排序列名
				sortOrder: 'asc', // 排序方式
        		rownumbers: true,
        		allowUnSelectRow: true,
        		usePager: true,
        		width: '100%',
        		height: '95%',
        		heightDiff: -4,
        		parms: {
        			_filterParms: -1
        		}
            });
        }  
        
        function add(){
        	var row=grid.getSelectedRow();
        	if(row==null){
        		globalUtil.warnMsg(globalErrorMsg['500116']);//请选择一行记录添加他项回执
        		return;
        	}else{
        		 var url=globalUtil.getHtml("../loanappro/housingLoanOthersReceipt.html?wms_cre_credit_head_id="+row.wms_cre_credit_head_id+"&taskId="+row.taskId+"&edition_num="+row.edition_num);
        		 dialog=$.ligerDialog.open({
        				url:url,
        				title:'他项信息',
        				width:800,
        				height:globalUtil.setDialogHeight(450),
        				onHiddenOrClose:function(){
        				},
        				isResize:false
        		 });
        	}
        	
        }
        //------------------------------------贷款详细信息------------------------------
          function approvalProcess(wms_cre_credit_head_id){
        		var url = globalUtil.getHtml("../creditManage/houseApprovalProcess.html?wms_cre_credit_head_id="+wms_cre_credit_head_id);
       		dialog=$.ligerDialog.open({
       			url:url,
       			title: '查看',
		        width: 1000,
		        height: globalUtil.setDialogHeight(500),
		        onHiddenOrClose: function(){
		    	},
		        isResize: false
       		});
        }
        function creditInfo(wms_cre_credit_head_id){
        	var url = globalUtil.getHtml("../creditManage/checkHouseCredit.html?wms_cre_credit_head_id="+wms_cre_credit_head_id+"&pageType=ck");
        	dialog = $.ligerDialog.open({
		        url: url,
		        title: '客户贷款详细信息',
		        width: 1020,
		        height: globalUtil.setDialogHeight(700),
		        onHiddenOrClose: function(){
		    	},
		        isResize: false
	    	});
        }
        //------------------------------------贷款详细信息结束------------------------------

        function initParams() {
        	params = globalUtil.getFormParam("searchbar");
        }
        //查询
        var search= function() {
            initParams();
            global_ligerui_extend.search(grid, params);
        }
      //单据作废方法
        function deleteInfo(){
 	       	//判断如果没有选择任何审批人，不允许跳出打印页面。
 	       	var row=grid.getSelectedRow();
 	       	if(row==null){
 	       		globalUtil.warnMsg(globalErrorMsg['500161']);//请选择一位客户单据进行作废操作
 	               return;
 	       	}
 	       	if(row.edition_num!='2'){
 	       		globalUtil.warnMsg(globalErrorMsg['500180']);//不准作废操作
             	return;
 	       	}
	    	var	nullify_type="8";//来源 --他项
	       	var url = globalUtil.getHtml("../loanappro/loanApproCancel.html?wms_cre_credit_head_id="+row.wms_cre_credit_head_id+"&taskId="+row.taskId+"&nullify_type="+nullify_type+"&cre_type="+row.cre_type);
	      		dialog=$.ligerDialog.open({
	      			url:url,
	      			title: '作废理由',
		        width: 800,
		        height: globalUtil.setDialogHeight(250),
		        onHiddenOrClose: function(){
		    	},
		        isResize: false
	      		});
        }
</script>
</body>
</html>