<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<title>理财工资情况表</title>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<script type="text/javascript">
	var params;
	var mydate = new Date();
	var y = mydate.getFullYear();
	var m = mydate.getMonth();
	var date = y + "-" + (m > 9 ? m : "0" + m);

	$(function() {
		$("#statics_month").val(date);
		initCombobox();
		initParams();
		initGrid();
		$("#toolbar").ligerToolBar({
			items : toolbar
		});
	})

	var toolbar = [];
	toolbar.push({
		text : '查询',
		click : re_search,
		icon : 'search'
	});
	toolbar.push({
		text : '清空',
		click : clear,
		icon : 'empty'
	});
	toolbar.push({
		text : '导出excel',
		click : importExcel,
		icon : 'modify'
	});

	//表格初始化
	function initGrid() {
		columns = [ {
			display : '一级部门',
			name : 'one_level_dept_name',
			width : 180
		}, {
			display : '二级部门',
			name : 'two_level_dept_name',
			width : 180
		}, {
			display : '姓名及短工号',
			name : 'personnel_name',
			width : 180
		}, {
			display : '入职时间',
			name : 'personnel_trialStartTime',
			width : 180
		}, {
			display : '职务',
			name : 'post_name',
			width : 180
		}, {
			display : '状态',
			name : 'personnel_state',
			width : 100
		},
		 {
			display : '开资情况',
			name : 'is_pay',
			width : 180
		},
		{
			display : '无责底薪（元）',
			name : 'base_salary',
			width : 150
		}, {
			display : '绩效薪资（元）',
			name : 'performance_salary',
			width : 150
		}, {
			display : '岗位津贴（元）',
			name : 'post_salary',
			width : 150
		}, {
			display : '合计（元）',
			name : 'total',
			width : 150
		}

		];

		grid = $("#grid").ligerGrid({
			columns : columns,
			url: global_param.context_name + '/inve/selectWmsInveSalary.do',
			rownumbers : true,
			allowUnSelectRow : true,
			usePager : true,
			width : '100%',
			height : '95%',
			heightDiff : -4,
			pageSizeOptions : [ 15, 30, 45 ,60 ],
			rowAttrRender : function(rowdata, rowindex) {

			},
			parms : params
		});
	}
	
	function initParams() {
		params = globalUtil.getFormParam("searchbar");
		params.personnel_state = $("#personnel_state").ligerComboBox("getValue");
	}

	//查询方法
	function re_search() {
		initParams();
		global_ligerui_extend.search(grid, params);
	}

	//清空方法
	function clear() {
		$("#statics_month").val(date);
		$("#personnel_name").val('');
		$("#dept_name").val('');
		$("#personnel_state").ligerComboBox("setValue", '-1');
	}
	
	
	function initCombobox(){
	//初始化人员状态
	$("#personnel_state").ligerComboBox({
		width : 135,
		data : [ {
			text : '-请选择-',
			id : '-1'
		}, {
			text : '在职',
			id : 1
		}, {
			text : '试用',
			id : 0
		}, {
			text : '实习',
			id : 2
		},
		 {
			text : '离职',
			id : 3
		},
		{
			text : '兼职',
			id : 7
		} ],
		value : '-1'
	});
	}
	
	//导出报表
	function importExcel() {
		var month = params.statics_month;
		$("#month").val(month);
// 		var val = JSON.stringify(params);
// 		$("#parameter").val(val);
		var url = global_param.context_name + '/inve/exportExcel.do';
		$("#form_data").attr("action", url);
		$("#form_data").submit();
	}
	
</script>
<style type="text/css">
.l-panel-search-title {
	padding-left: 20px;
}
</style>
</head>
<body>
	<div class="l-panel-search-cond clearfix" style="width: 1400px;">
		<div id="searchbar" class="l-searchbar clearfix">
			<div class="float-l">
				<div class="l-panel-search-title">部门名称</div>
				<div class="l-panel-search-item">
					<input type="text" id="dept_name" />
				</div>
			</div>
			<div class="float-l">
				<div class="l-panel-search-title">员工姓名[短工号]：</div>
				<div class="l-panel-search-item">
					<input type="text" id="personnel_name" name="personnel_name">
				</div>
			</div>
			<div class="float-l">
				<div class="l-panel-search-title">员工状态</div>
				<div class="l-panel-search-item">
					<input type="text" id="personnel_state" name="personnel_state">
				</div>
			</div>
			<div class="float-l">
				<div class="l-panel-search-title">统计月份：</div>
				<div class="l-panel-search-item">
					<input id="statics_month" name="statics_month" class="Wdate"
						type="text"
						onclick="WdatePicker({dateFmt:'yyyy-MM',isShowClear:true, maxDate:'%y-%M'})"
						style="width: 135px; vertical-align: top;" />
					</td>
				</div>
			</div>
		</div>
	</div>
	<div id="toolbar"></div>
	<div id="grid"></div>
		<form id="form_data" name="form_data"
		method="post">
		<div>
<!-- 			<input id="parameter" name="parameter" type="hidden" /> -->
			<input id="month" name="month" type="hidden" />
		</div>

	</form>
</body>
</html>