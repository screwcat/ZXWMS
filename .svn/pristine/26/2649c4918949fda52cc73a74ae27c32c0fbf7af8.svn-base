<body style="overflow-y: hidden;">
	<div class="l-panel-search clearfix centertoolbar-w">
		<div id="searchbar" class="l-searchbar clearfix">
			<!--查询条件-->
			<div class="l-panel-search-cond clearfix">
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px">客户姓名：</div>
					<div class="l-panel-search-item">
						<input type="text" id="cus_name" />
					</div>
				</div>
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px">理财产品：</div>
					<div class="l-panel-search-item">
						<input type="text" id="category_name" />
					</div>
				</div>
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px">有效证件：</div>
					<div class="l-panel-search-item">
						<input type="text" id="id_card" />
					</div>
				</div>
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px">上单时间：</div>
					<div class="l-panel-search-item">
						<input id="create_timestamp_begin" class="Wdate" type="text"
							onclick="WdatePicker({dateFmt:'yyyy-MM-dd',isShowClear:true})"
							style="width: 133px; vertical-align: top;" /> 至 <input
							id="create_timestamp_end" class="Wdate" type="text"
							onclick="WdatePicker({dateFmt:'yyyy-MM-dd',isShowClear:true})"
							style="width: 133px; vertical-align: top;" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="centertoolbar" class="minwidth400"></div>
	<div class="reminder_red clearboth">									
			<span class="redword">提醒：所有未支付单据请在24小时内进行支付完成，否则该单据将自动作废！</span>
	</div>
	<div id="grid"></div>
	<!-- 工具条初始化 -->
	<script type="text/javascript">
        var grid;
		var toolbar;
		var params;
		var dialog;
		var columns;
        $(function() {
        	var toolbarItemData = [];
        	initGrid();
            toolbarItemData.push({
                 text: '金额支付',
                 click: amountPay,
                 icon: 'mpay'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '支付退回',
                 click: toBackAmountPay,
                 icon: 'return'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '查询',
                 click:search,
                 icon: 'search'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '清空',
                 click:clear,
                 icon: 'empty'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '导出Excel',
                 icon: 'export',
                 id:'ToolTables_XLS_2'
             });
             toolbarItemData.push({
                 line: true
             });
            $("#centertoolbar").ligerToolBar({
                items: toolbarItemData
        	});
            search();
            registerCsv();
            init_category_name();
        });
       
        /**
         *在菜单上注册导出事件，并定义获取的导出的excel内容 
         */
        function registerCsv(){
        	var moviePath = "../../js/media/swf/copy_csv_xls_pdf.swf";
        	var fileName = '金额管理单据信息.xls';
        	var titleJson = '';
        	var dataJson = '';
        	var obj = $("div[toolbarid='ToolTables_XLS_2']")[0];//获取菜单对象
        	var getDataFun = function(){
        		var text = {};
        		var titleJson = {};
        		for(var i=0;i<columns.length;i++){
        			titleJson[columns[i].name] = columns[i].display;
        		}
        		text.title = titleJson;
        		initParams();
        		//实现导出的时候，规定导出的具体内容
        		text.title={'bill_code':'单据编号','cus_name':'客户姓名','id_card':'有效证件','category_name':'理财产品','product_deadline':'理财期限','product_account':'投资金额(万元)','create_timestamp_str':'录入时间','data_status_str':'单据状态'};
        		var json = globalUtil.syncPostJson("/inve/wmsinvetransaforjeglwithoutpaginglist.do?sortname=create_timestamp&sortorder=desc",params);//同步获取需要导出的数据内容
        		text.data = json.Rows;
        		return text;
        	};
        	registerXlsFlashBtn(moviePath,fileName,titleJson,dataJson,obj,getDataFun);
        }
        //产品类型
    	function init_category_name(json){
    		var category_name_params ={
    				dest_url:'/inve/wmsinvepruductcategorylistforselect.do',
    				t_col_name:'category_name',
    				valueField:'wms_inve_pruduct_category_id',   //下拉框value对应的值，默认为id
    				textField:'category_name',    //下拉框text对应的值，默认为text
    				input_width:133,
    				def_val:'first'
    				};
    		global_ligerui_extend.initCombox("category_name",null,category_name_params);
   		    global_ligerui_extend.initComboxDefVal("category_name");
    	}
        /*
    	 //pos机
    	function init_pos_code(json){
    		var pos_code_params ={
    				dest_url:'/inve/wmsinveallposlistforselect.do',
    				t_col_name:'pos_code',
    				valueField:'wms_inve_pos_id',   //下拉框value对应的值，默认为id
    				textField:'pos_code',    //下拉框text对应的值，默认为text
    				input_width:133,
    				def_val:'first'
    				};
    		global_ligerui_extend.initCombox("pos_code",null,pos_code_params);
   		    global_ligerui_extend.initComboxDefVal("pos_code");
    	}
        */
        /*
        //初始化金额状态
        function init_account_status(json){
        	var account_status_params ={
    				dest_url:'/sysmanage/wmssysdictdatabydictidempty.do?isEmpty=true&wms_sys_dict_id=56',
    				t_col_name:'account_status',
    				valueField:'value_code',   //下拉框value对应的值，默认为id
    				textField:'value_meaning',    //下拉框text对应的值，默认为text
    				input_width:133,
    				def_val:'first'
    				};
    		global_ligerui_extend.initCombox("account_status",null,account_status_params);
   		    global_ligerui_extend.initComboxDefVal("account_status");
        }*/
        
        //清空所填写内容
        function clear(){
        	$("#cus_name").val("");
        	$("#id_card").val("");
		    $("#category_name").val("请选择");
		    global_ligerui_extend.setComboxVal("category_name","-1");
		    $("#create_timestamp_begin").val("");
		    $("#create_timestamp_end").val("");
        }
        //表格初始化
        function initGrid() {
        	columns = [{
                display: '单据编号',
                name: 'bill_code',
                width: 150,
                minWidth: 150,
                //添加超链接的东西
                render: function (rowdata, rowindex, value) { 
        			return '<a href="javascript:inveInfo('+rowdata.wms_inve_transa_id+','+rowdata.wms_inve_transa_prod_id+');" style="color:#056AFF;text-decoration: none;">'+value+'</a>';
        		}
            },{
           		 display: '客户姓名',
            	 name: 'cus_name',
            	 width: 120,
            	 minWidth: 120
        	},{
           	 	 display: '有效证件',
            	 name: 'id_card',
             	 width: 150,
             	 minWidth: 150,
       		},{
           		 display: '理财产品',
            	 name: 'category_name',
            	 width: 120,
            	 minWidth: 120
        	},{
           		 display: '理财期限',
            	 name: 'product_deadline',
            	 width: 100,
            	 minWidth: 100,
            	 //添加超链接的东西
                 render: function (rowdata, rowindex, value) { 
                     return value+"期";
                 }
        	},{
	           	 display: '投资金额（万元）',
	             name: 'product_account',
	             width: 120,
	             minWidth: 120
       		},{
           	 	 display: '上单时间',
            	 name: 'create_timestamp_str',
             	 width: 160,
            	 minWidth: 160
        	},{
        	   display: '单据状态',
               name: 'data_status_str',
               width: 100,
               minWidth: 100
            },{
                display: '流程历程',
                name: 'process',
                width: 100,
                minWidth: 100,
                //添加超链接
                render: function (rowdata, rowindex, value) {                    
                     return '<a href="javascript:financialSingleProcess('+rowdata.wms_inve_transa_id+');" style="color:#056AFF;text-decoration: none;">'+"查看"+'</a>';                                  
                 }
             }];
        	
            grid = $("#grid").ligerGrid({
        		columns: columns,
        		url: global_param.context_name + '/inve/wmsinvetransaforjeglwithpaginglist.do',
        		sortName: 'create_timestamp', // 排序列名
				sortOrder: 'desc', // 排序方式
        		rownumbers: true,
        		allowUnSelectRow: true,
        		usePager: true,
        		width: '100%',
        		height: '95%',
        		heightDiff: -4,
        		parms: {
        			_filterParms: -1
        		}
            });
        }
        //理财详细信息
        function inveInfo(wms_inve_transa_id,wms_inve_transa_prod_id){
        	var url = globalUtil.getHtml("inve/addFinancialManagement.html?wms_inve_transa_id="+wms_inve_transa_id+"&wms_inve_transa_prod_id="+wms_inve_transa_prod_id+"&cktype=ck");
            globalUtil.openTab(10001, "理财详细信息", url, false);
        }
        //流程历程查看
        function financialSingleProcess(wms_inve_transa_id){
        	var url = globalUtil.getHtml("financialSingleProcess.html?wms_inve_transa_id=" + wms_inve_transa_id);
            dialog=$.ligerDialog.open({
                url:url,
                title: '',
                width: 1000,
                height: globalUtil.setDialogHeight(500),
                onHiddenOrClose: function(){
                },
                isResize: false
            }); 
        }
        function initParams() {
        	params = globalUtil.getFormParam("searchbar");
        }
        //实现数据查询
        var search= function() {
            initParams();
            global_ligerui_extend.search(grid, params);
        }
        function registParentFun(){
        	parent.window.registFun = [];
        	parent.window.registFun[0] = search;
        }
        //处理金额支付
        var amountPay=function(){
        	//判断如果没有选择任何数据
        	var row=grid.getSelectedRow();
        	if(row==null ){
        		globalUtil.warnMsg(globalErrorMsg['800201']);//请选择一行记录
                return;
        	}else{
                var url = globalUtil.getHtml("amountPayPage.html?wms_inve_transa_id="+row.wms_inve_transa_id+"&wms_inve_transa_prod_id="+row.wms_inve_transa_prod_id+"&taskId="+row.taskId);
           		dialog=$.ligerDialog.open({
           			url:url,
           			title: '金额支付',
    		        width: 1200,
    		        height: globalUtil.setDialogHeight(800),
    		        onHiddenOrClose: function(){
    		    	},
    		        isResize: false
           		}); 	
        	}
        }
        //支付退回
        var toBackAmountPay=function(){
        	//判断如果没有选择任何数据
            var row=grid.getSelectedRow();
            if(row==null ){
                globalUtil.warnMsg(globalErrorMsg['800201']);//请选择一行记录
                return;
            }else{
            	var url = globalUtil.getHtml("toBackAmountPayPage.html?wms_inve_transa_id="+row.wms_inve_transa_id+"&taskId="+row.taskId);
                dialog=$.ligerDialog.open({
                    url:url,
                    title: '退件',
                    width: 800,
                    height: globalUtil.setDialogHeight(300),
                    onHiddenOrClose: function(){
                    },
                    isResize: false
                });     
            }
        }
        //支付退件操作处理
        function toBackSave(advice,taskId,wms_inve_transa_id){
        	var jsonParm ={};
        	jsonParm.pass=false;
        	jsonParm.advice=advice;
        	jsonParm.wms_inve_transa_id=wms_inve_transa_id;
        	jsonParm.taskId=taskId;
            $.post(globalUtil.getTimestampUrl("/inve/toBackforJEZF.do"),
                    jsonParm, function(data) {
                        if (data == 'success') {
                             globalUtil.successMsg(globalErrorMsg['100037'],function(){
                            	 search();
                             });//退件成功
                        }else {
                             globalUtil.errorMsg(globalErrorMsg['100038']); //退件失败
                        }
                    });
        }
        </script>
</body>
