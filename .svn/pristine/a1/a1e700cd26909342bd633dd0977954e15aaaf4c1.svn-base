<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-

transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<link href="../../css/app.css" rel="stylesheet" type="text/css" />
<link href="../../css/ligerui-main.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<title>新增奖</title>
<style type="text/css">
.td_title {
	background: none repeat scroll 0 0 #EAF0FB;
}

.tb_input TD {
	background: none repeat scroll 0 0 #FFFFFF;
	padding: 3px 1px 1px 4px;
}

table td {
	border-color: #BFBFBF;
}
</style>

</head>
<body>
	<!-- 页面加载的时候，审批流程为显示 -->
	<hr />
	<div class="float-l clearboth" style="height: 10px;"></div>
	<div align="left" class="warningDiv">
		<span class="redword"><span id="notice_date"></span>月底，<span id="notice_person"></span>通过存量认证，认证时刻数据情况如下：</span>
       
	</div>
		
	<div class="center-content clearboth" style="min-width: 300px;">
		<div class="center-title">认证信息</div>
		<div class="center-txt" style="margin-bottom: 10px;">
			<div id="grid"></div>
		</div>
	</div>
	
	<!-- 提交功能按钮区 -->
	<div class="pop-footer5 clearboth" style="bottom: 1px;" id="tb_btn">
		<input id="cancelBtnId"
			class="btn-cancel" onmouseover="this.className='btn-cancel-over'"
				onmouseout="this.className='btn-cancel'"
				onmousedown="this.className='btn-cancel-down'" type="button"
			onclick="closeDialog();" />
	</div>
	<!-- 工具条初始化 -->
	<script type="text/javascript">
		var statics_month;
		var personnel_info;
		var pm_personnel_otherinfo_id;
		
		$(function() {
			statics_month=$.query.get('statics_month');
			statics_month = statics_month.substr(0,4)+"年"+statics_month.substr(5);
			personnel_info=$.query.get('personnel_info');
			pm_personnel_otherinfo_id=$.query.get('pm_personnel_otherinfo_id');

			init_notice_info();
			initGrid();
		});
	
		var columns = [{
            display: '单据编号',
            name: 'bill_code',
            width: 180,
            minWidth: 180,
        	isSort:false
        },{
        	display:'客户姓名',
        	name:'cus_name',
        	width:180,
        	minWidth:180,
        	isSort:false
        },{
        	display:'签单金额（元）',
        	name:'pay_account',
        	width:180,
        	minWidth:180,
        	isSort:false
        },{
        	display:'签单日期',
        	name:'date_of_payment',
        	width:180,
        	minWidth:180,
        	isSort:false
        }];
		
		//初始化提示信息
		function init_notice_info(){
	    	$('#notice_date').html(statics_month);
	    	$('#notice_person').html(personnel_info);
	    }
		
		//表格初始化
        function initGrid() {
            grid = $("#grid").ligerGrid({
        		columns: columns,
        		url: global_param.context_name + '/inve/getWmsInveTransaAuthListByPid.do?pm_personnel_otherinfo_id='+pm_personnel_otherinfo_id,
        		rownumbers: true,
        		allowUnSelectRow: true,
        		usePager: false,
        		enabledSort: true, 
        		width: '100%',
        		height: '90%',
        		heightDiff: -4,
            });
        }  
		
		//关闭对话框
		function closeDialog(){
			window.parent.dialog.hide();
		}
    	//关闭对话框
		function closeDialogShow(){
			dialogshow.hide();
		}
	</script>
</body>
</html>
