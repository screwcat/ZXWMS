<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<link href="../../css/app.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<script src="../../js/exportxls.js?v=2"></script>
<script type="text/javascript" charset="utf-8"
	src="../../js/media/js/ZeroClipboard.js"></script>
<title>车贷终审>放款申请列表</title>
</head>
<body style="overflow-y: hidden;">
	<div class="l-panel-search clearfix centertoolbar-w">
		<div id="searchbar" class="l-searchbar clearfix">
			<!--查询条件-->
			<div class="l-panel-search-cond clearfix">
				<div class="float-l">
					<div class="l-panel-search-title">合同编号：</div>
					<div class="l-panel-search-item">
						<input type="text" id="protocol_id_year_num" />
					</div>
					<div class="float-l">
						<div class="l-panel-search-title">&nbsp;&nbsp;业务员/编号：</div>
						<div class="l-panel-search-item">
							<input type="text" id="salesman_name" />
						</div>
					</div>
					<div class="float-l">
						<div class="l-panel-search-title">客户姓名：</div>
						<div class="l-panel-search-item">
							<input type="text" id="debtor_name" />
						</div>
					</div>
					<div class="float-l">
						<div class="l-panel-search-title">联系电话：</div>
						<div class="l-panel-search-item">
							<input type="text" id="debtor_tel" />
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="centertoolbar" class="minwidth400"></div>
	<div id="grid"></div>
	<!-- 工具条初始化 -->
	<script type="text/javascript">
        var grid;
		var toolbar;
		var params;
		var dialog;
		var columns;
        $(function() {
        	initGrid();
        	var toolbarItemData = [];
        	 toolbarItemData.push({
            	 text:'放款申请',
            	 click:makeloans,
            	 icon:'import'
             });
             toolbarItemData.push({
            	 line:true
             });
             toolbarItemData.push({
                 text: '查询',
                 click:search,
                 icon: 'search'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '清空',
                 click:clear,
                 icon: 'empty'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '导出Excel',
                 icon: 'export',
                 id:'ToolTables_XLS_2'
             });
             toolbarItemData.push({
                 line: true
             });
            /* toolbarItemData.push({
                 text: '单据作废',
                 click:deleteInfo,
                 icon: 'delete'
             });
             toolbarItemData.push({
                 line: true
             });*/
             $("#centertoolbar").ligerToolBar({
                  items: toolbarItemData
        	 });
             search();
             registerCsv();
        });
        function registerCsv(){
        	var moviePath = "../../js/media/swf/copy_csv_xls_pdf.swf";
        	var fileName = '车贷等待放款客户信息列表.xls';
        	var titleJson = '';
        	var dataJson = '';
        	var obj = $("div[toolbarid='ToolTables_XLS_2']")[0];//获取菜单对象
        	var getDataFun = function(){
        		var text = {};
        		initParams();
        		//实现导出的时候，规定导出的具体内容
        		text.title={'protocol_id_year_num':'合同编号','debtor_name':'客户姓名','debtor_tel':'联系电话','protocol_date':'合同签订日期','principal_lower':'合同金额（元）','bill_code':'单据编号','cre_type_name':'贷款产品','salesman_name_str':'业务员/编号','create_user_name':'录入员','bill_status_name':'单据状态'};//定义需要导出的列名以及列名与数据的对应关系
        		var json = globalUtil.syncGetJson("/loanappro/getCarMakeLoansListWithoutPagingList.do?sortname=bill_code",params);//同步获取需要导出的数据内容
        		text.data = json.Rows;
        		return text;
        	};
        	registerXlsFlashBtn(moviePath,fileName,titleJson,dataJson,obj,getDataFun);
        }
        //清空所填写内容
        function clear(){
        	$("#protocol_id_year_num").val("");
        	$("#debtor_name").val("");
        	$("#debtor_tel").val("");
        	$("#salesman_name").val("");
        }
        //表格初始化
        function initGrid() {
        	columns = [{
                display: '合同编号',
                name: 'protocol_id_year_num',
                width: 130,
                minWidth: 130,
                //添加超链接的东西
                render: function (rowdata, rowindex, value) { 
        			return '<a href="javascript:globalUtil.borrowProtocolInfo('+rowdata.wms_cre_credit_head_id+');" style="color:#056AFF;text-decoration: none;">'+value+'</a>';
        		},

            },{
            	display:'合同签订日期',
            	name:'protocol_date',
            	width:130,
            	minWidth:130          	
            },{
                display: '客户姓名',
                name: 'debtor_name',
                width: 130,
                minWidth: 130
            },{
            	display:'联系电话',
            	name:'debtor_tel',
            	width:130,
            	minWidth:130
            },{
            	display:'合同金额（元）',
            	name:'principal_lower',
            	width:130,
            	minWidth:130
            },{
           	 	display:'单据编号',
           	 	name:'bill_code',
           	 	width:130,
           	 	minWidth:130,
           	    render: function (rowdata, rowindex, value) { 
        			return '<a href="javascript:creditInfo('+rowdata.wms_cre_credit_head_id+');" style="color:#056AFF;text-decoration: none;">'+value+'</a>';
        		},           
            },{
            	display:'贷款产品',
            	name:'cre_type_name',
            	width:120,
            	minWidth:120
            },{
                display: '业务员/编号',
                name: 'salesman_name_str',
                width: 100,
                minWidth: 100	
            },{
            	display:'城市',
            	name:'city',
            	width:100,
            	minWidth:100
            },{
            	display:'录入员',
            	name:'create_user_name',
            	width:100,
            	minWidth:100
            },{
                display: '单据状态',
                name: 'bill_status_name',
                width: 100,
                minWidth: 100
            },{
        	   display: '流程历程',
               width: 100,
               minWidth: 100,
               //添加超链接
               render: function (rowdata, rowindex, value) { 
       			return '<a href="javascript:approvalProcess('+rowdata.wms_cre_credit_head_id+');" style="color:#056AFF;text-decoration: none;">'+"查看"+'</a>';
               }
               }];
        	
            grid = $("#grid").ligerGrid({
        		columns: columns,
        		url: global_param.context_name + '/loanappro/getCarMakeLoanListWithPagingList.do',
        		sortName: 'bill_code', // 排序列名
				sortOrder: 'asc', // 排序方式
        		rownumbers: true,
        		allowUnSelectRow: true,
        		usePager: true,
        		width: '100%',
        		height: '95%',
        		heightDiff: -4,
        		parms: {
        			_filterParms: -1
        		}
            });
        }      
        function makeloans(){
        	var row=grid.getSelectedRow();
        	if(row==null){
        		globalUtil.warnMsg(globalErrorMsg['500113']);
        		return;
        	}else{
        		var url = globalUtil.getHtml("../loanappro/carMakeLoansAppro.html?wms_cre_credit_head_id="+row.wms_cre_credit_head_id+"&protocol_id_year_num="+row.protocol_id_year_num+"&debtor_name="+row.debtor_name
        	+"&protocol_date="+row.protocol_date+"&principal_lower="+row.principal_lower+"&borrow_interest="+row.borrow_interest
        	+"&refund_number="+row.refund_number+"&refund_bank="+row.refund_number+""+"&taskId="+row.taskId+"&cre_type="+row.cre_type
        	+"&protocol_type="+row.protocol_type+"&cre_loan_type="+row.cre_loan_type);   

       		dialog=$.ligerDialog.open({
       			url:url,
       			title: '放款申请',
		        width: 880,
		        height: globalUtil.setDialogHeight(700),
		        onHiddenOrClose: function(){
		    	},
		        isResize: false
       		});
        	}
        }

        	//------------------------------------贷款详细信息------------------------------
          function approvalProcess(wms_cre_credit_head_id){
        	 var url='';
      		url = globalUtil.getHtml("../creditManage/carInfoWSAppProcess.html?wms_cre_credit_head_id="+wms_cre_credit_head_id);
       		dialog=$.ligerDialog.open({
       			url:url,
       			title: '查看',
		        width: 1000,
		        height: globalUtil.setDialogHeight(500),
		        onHiddenOrClose: function(){
		    	},
		        isResize: false
       		});
        }
       
       function creditInfo(wms_cre_credit_head_id){
    	    var url = globalUtil.getHtml("../creditManage/checkCarCredit.html?wms_cre_credit_head_id="+wms_cre_credit_head_id+"&pageType=ck");
        	dialog = $.ligerDialog.open({
		        url: url,
		        title: '客户贷款详细信息',
		        width: 1020,
		        height: globalUtil.setDialogHeight(700),
		        onHiddenOrClose: function(){
		    	},
		        isResize: false
	    	});
        }
        //单据作废方法
        function deleteInfo(){
	       	//判断如果没有选择任何审批人，不允许跳出打印页面。
	       	var row=grid.getSelectedRow();
	       	if(row==null){
	       		globalUtil.warnMsg(globalErrorMsg['500161']);//请选择一位客户单据进行作废操作
	               return;
	       	}
	    	var	nullify_type="8";//来源 --放款申请
	       	var url = globalUtil.getHtml("carLoanApproCancel.html?wms_cre_credit_head_id="+row.wms_cre_credit_head_id+"&taskId="+row.taskId+"&nullify_type="+nullify_type);
	      		dialog=$.ligerDialog.open({
	      			url:url,
	      			title: '作废理由',
		        width: 800,
		        height: globalUtil.setDialogHeight(250),
		        onHiddenOrClose: function(){
		    	},
		        isResize: false
	      	});
       }
        //实现作废操作提交操作
        function submit(pass,advice,taskId,wms_cre_credit_head_id,nullify_type){
        	var jsonParm ={};
			var url="";
			url="/loanfina/carPperiodAndCreRepaySaveCancel.do";	
        	jsonParm.nullify_type=nullify_type;//单据作废环节
        	jsonParm.nullify_reason=advice;//单据作废原因
        	jsonParm.advice=advice;
        	jsonParm.taskId=taskId;
        	jsonParm.carkey=nullify_type;//流程节点--//carkey: 1:车贷复核  2:复核退回  3:评估审核  4:验点审核  5:贷前退件 6:终审审批  7:合同签订  8:放款申请  9:放款审批 10:放款确认
        	jsonParm.wms_cre_credit_head_id=wms_cre_credit_head_id;
        	jsonParm.timestamp_val=global_param.timestamp_val;//时间
        	$.post(globalUtil.getTimestampUrl(url),jsonParm,
        	function(data){
        		if(data==='success'){
        	    	globalUtil.successMsg(globalErrorMsg['100002'],
        	            	function(){            	
        	            				search();	
        	            				closePage();
        	            	 });//保存成功       
        			
        		}else if(data==='error'){
        			globalUtil.errorMsg(globalErrorMsg['500163']); //提示:操作失败
        		}
        	});
        }
        //------------------------------------贷款详细信息结束------------------------------

        function initParams() {
        	params = globalUtil.getFormParam("searchbar");
        }
        //查询
        var search= function() {
            initParams();
            global_ligerui_extend.search(grid, params);
        }
     	//关闭页面
        function closePage(){
        	dialog.hide();
        }
        </script>
</body>
</html>