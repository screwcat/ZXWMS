			disacl_date,
			disacl_type,
			acl_state,
			create_user_id,
			create_timestamp,
			last_update_user_id,
			last_update_timestamp,
			enable_flag
		)
		values
		<foreach collection="list" item="item" separator=",">
		(
			#{item.wms_inve_transa_id }, 
			#{item.wms_inve_clerk_protocol_id },
			#{item.cre_type },
			#{item.wms_inve_credit_package_id },
