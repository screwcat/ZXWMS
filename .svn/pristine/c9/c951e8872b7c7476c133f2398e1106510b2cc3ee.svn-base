<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="../../css/zx-all.css" rel="stylesheet" type="text/css" />
<link href="../../css/app.css" rel="stylesheet" type="text/css" />
<script src="../../js/zx-all.js" type="text/javascript"></script>
<script src="../../js/exportxls.js?v=2"></script>
<script type="text/javascript" charset="utf-8"
	src="../../js/media/js/ZeroClipboard.js"></script>
<title>理财复核</title>
</head>
<body style="overflow-y: hidden;">
	<div class="l-panel-search clearfix centertoolbar-w">
		<div id="searchbar" class="l-searchbar clearfix">
			<!--查询条件-->
			<div class="l-panel-search-cond clearfix">
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px">&nbsp;&nbsp;&nbsp;客户姓名:</div>
					<div class="l-panel-search-item">
						<input type="text" id="cus_name" />
					</div>
				</div>
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px">理财产品:</div>
					<div class="l-panel-search-item">
						<input type="text" id="category_name" style="width: 150px;" />
					</div>
				</div>
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px">有效证件:</div>
					<div class="l-panel-search-item">
						<input type="text" id="id_card" />
					</div>
				</div>
				<div class="float-l">
					<div class="l-panel-search-title" style="margin-left: 16px">上单时间:</div>
					<div class="l-panel-search-item">
						<input id="create_timestamp_begin" class="Wdate" type="text"
							onclick="WdatePicker({dateFmt:'yyyy-MM-dd',isShowClear:true})"
							style="width: 100px; vertical-align: top;" /> 至 
						<input id="create_timestamp_end" class="Wdate" type="text"
							onclick="WdatePicker({dateFmt:'yyyy-MM-dd',isShowClear:true})"
							style="width: 100px; vertical-align: top;" />
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="centertoolbar" class="minwidth400"></div>
	<div id="grid"></div>
	<!-- 工具条初始化 -->
	<script type="text/javascript">
        var grid;
		var toolbar;
		var params;
		var dialog;
		var columns;
		var adviceLC;
        $(function() {
        	initGrid();
        	var toolbarItemData = [];
        	 toolbarItemData.push({
                 text: '复核',
                 click: financialReturn,
                 icon: 'loanConfirm'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '查询',
                 click:search,
                 icon: 'search'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '清空',
                 click:clear,
                 icon: 'empty'
             });
             toolbarItemData.push({
                 line: true
             });
             toolbarItemData.push({
                 text: '导出Excel',
                 icon: 'export',
                 id:'ToolTables_XLS_2'
             });
             toolbarItemData.push({
                 line: true
             });
             $("#centertoolbar").ligerToolBar({
                  items: toolbarItemData
        	 });
             search();
             registerCsv();
             init_category_name();
        });
    	 //实现数据导出功能
        function registerCsv(){
        	var moviePath = "../../js/media/swf/copy_csv_xls_pdf.swf";
        	var fileName = '理财复核信息.xls';
        	var titleJson = '';
        	var dataJson = '';
        	var obj = $("div[toolbarid='ToolTables_XLS_2']")[0];//获取菜单对象
        	var getDataFun = function(){
        		var text = {};
        		initParams();
        		text.title={'bill_code':'单据编号','cus_name':'客户姓名','id_card':'有效证件','category_name':'理财产品','product_deadline':'理财期限','product_account':'投资金额(万元)','date_of_create':'上单时间','transa_data_status_name':'单据状态'};//定义需要导出的列名以及列名与数据的对应关系
        		var json = globalUtil.syncPostJson("/inve/getFinancialReturnWithoutPaging.do?sortname=t2.create_timestamp&sortorder=desc",params);//同步获取需要导出的数据内容
        		text.data = json.Rows;
        		return text;
        	};
        	registerXlsFlashBtn(moviePath,fileName,titleJson,dataJson,obj,getDataFun);
        }
        //清空所填写内容
        function clear(){
        	$("#cus_name").val("");
        	$("#id_card").val("");
        	$("#create_timestamp_begin").val("");
        	$("#create_timestamp_end").val("");
        	global_ligerui_extend.setComboxVal("category_name","-1");
            search();	
        }
        //表格初始化
        function initGrid() {
        	columns = [{
                display: '单据编号',
                name: 'bill_code',
                width: 150,
                minWidth: 150,
              	//添加超链接的东西
                render: function (rowdata, rowindex, value) { 
                	return '<a href="javascript:inveInfo('+rowdata.wms_inve_transa_id+','+rowdata.wms_inve_transa_prod_id+');" style="color:#056AFF;text-decoration: none;">'+value+'</a>';
        		},
            	isSort:false
            },{
                display: '客户姓名',
                name: 'cus_name',
                width: 150,
                minWidth: 150,
            	isSort:false
            },{
            	display:'有效证件',
            	name:'id_card',
            	width:150,
            	minWidth:150,
            	isSort:false
            },{
            	display:'理财产品',
            	name:'category_name',
            	width:150,
            	minWidth:150,
            	isSort:false
            },{
            	display:'理财期限',
            	name:'product_deadline',
            	width:170,
            	minWidth:170,
            	isSort:false
            },{
            	display:'投资金额(万元)',
            	name:'product_account',
            	width:170,
            	minWidth:170,
            	isSort:false
            },{
            	display:'上单时间',
            	name:'date_of_create',
            	width:180,
            	minWidth:180,
            	isSort:true
            },{
            	display:'单据状态',
            	name:'transa_data_status_name',
            	width:100,
            	minWidth:100,
            	isSort:false
            },{
            	display:'流程历程',
            	name:'',
            	width:80,
            	minWidth:80,
            	isSort:false,
            	//添加超链接的东西
                render: function (rowdata, rowindex, value) { 
        			return '<a href="javascript:financialSingleProcess('+rowdata.wms_inve_transa_id+');" style="color:#056AFF;text-decoration: none;">查看</a>';
        		},
            	
            }];
            grid = $("#grid").ligerGrid({
        		columns: columns,
        		url: global_param.context_name + '/inve/getWmsFinancialReturnpaginglist.do',
        		sortName: 't2.create_timestamp', // 排序列名
				sortOrder: 'desc', // 排序方式
        		rownumbers: true,
        		allowUnSelectRow: true,
        		usePager: true,
        		enabledSort: true, 
        		width: '100%',
        		height: '95%',
        		heightDiff: -4,
        		parms: {
        			_filterParms: -1
        		}
            });
        }  
    	//复核
    	var selectrow;
        function financialReturn() {
        	var row=grid.getSelectedRow();
        	selectrow = row;
            if(row==null){
                globalUtil.warnMsg(globalErrorMsg['310000']);//请选择一行记录进行复核
                return;
            }else if(row.transa_data_status == "9"){ //判断是否待复核
	               var url = globalUtil.getHtml("addFinancialManagement.html?cktype=ck&fhtype=fh&wms_inve_transa_id="+row.wms_inve_transa_id+"&wms_inve_transa_prod_id="+row.wms_inve_transa_prod_id
	                       +"&wms_inve_pruduct_category_id="+row.wms_inve_pruduct_category_id);
	               dialog=$.ligerDialog.open({
	          			url:url,
	          			title: '复核',
	   		        width: 1500,
	   		        height: globalUtil.setDialogHeight(1000),
	   		        onHiddenOrClose: function(){
	   		    	},
	   		        isResize: false
	          		}); 
	              return;	
        
            }else{
//                 globalUtil.warnMsg(globalErrorMsg['300116']);// '只能修改“草稿”状态下的单据'
                return;
            }
       	}
    	 //流程历程查看
        function financialSingleProcess(wms_inve_transa_id){
            var url = globalUtil.getHtml("financialSingleProcess.html?wms_inve_transa_id=" + wms_inve_transa_id);
            dialog = $.ligerDialog.open({
                url:url,
                title: '',
                width: 1000,
                height: globalUtil.setDialogHeight(500),
                onHiddenOrClose: function(){
                },
                isResize: false
            }); 
        }
        function openTab(param) {
        	var url = globalUtil.getHtml("inve/approvalChangeClaimInfo.html?param="+JSON.stringify(param));
            globalUtil.openTab(10001, "债权申请调整确认", url, false);
		}
    	
        //产品类型
    	function init_category_name(json){
    		var category_name_params ={
    				dest_url:'/inve/wmsinvepruductcategorylistforselect.do',
    				t_col_name:'category_name',
    				valueField:'wms_inve_pruduct_category_id',   //下拉框value对应的值，默认为id
    				textField:'category_name',    //下拉框text对应的值，默认为text
    				input_width:133,
    				def_val:'first'
    				};
    		global_ligerui_extend.initCombox("category_name",null,category_name_params);
   		    global_ligerui_extend.initComboxDefVal("category_name");
    	}
        
        function initParams() {
        	params = globalUtil.getFormParam("searchbar");
        	if(params.category_name == '-1'){
            	params.category_name = '';
            }
        }
        //查询
        var search= function() {
            initParams();
            global_ligerui_extend.search(grid, params);
        }
      //理财产品单据页面
		function inveInfo(wms_inve_transa_id,wms_inve_transa_prod_id){
		    var url = globalUtil.getHtml("inve/addFinancialManagement.html?wms_inve_transa_id="+wms_inve_transa_id+"&wms_inve_transa_prod_id="+wms_inve_transa_prod_id+"&cktype=ck");
		     globalUtil.openTab(10001,"理财详细信息",url, false);
	    }
      
       function closeDialogShow(){
    	  dialog.hide();
    	  search();
       }
       
       //复核结果保存（flag 1通过 ，0不通过）
       function tosubmitFinancialReturn(advice,flag,yjtype){
       	var row=selectrow;
       	adviceLC = advice;
       	$.post(globalUtil.getTimestampUrl('/inve/saveToSubmitFinancialReturn.do'), 
     			 {'wms_inve_transa_id' : row.wms_inve_transa_id,
       			 'wms_inve_transa_prod_id' : row.wms_inve_transa_prod_id,
       			 'review_advice' : advice,
       			 'review_result' : flag,
       			 'yjtype' : yjtype,
       			 'taskId' : row.taskId
     				},
     			function(data) {
         			if(data == 'success') {//提交成功
         				globalUtil.successMsg(globalErrorMsg['100002']);
         				dialog.hide();
         				search();
         			}else if(data == 'exist'){
         				//已被其他人复核
           				globalUtil.warnMsg(globalErrorMsg['911128']);
         			}else{
         				//提交失败
         				globalUtil.warnMsg(globalErrorMsg['100012']);
         			}
         			
     		});
       }
        </script>
</body>
</html>